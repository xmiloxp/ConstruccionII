<form action="/add" method="post">
    <div class="form-group">
        <input type="text" name="nombre" placeholder="Nombre" class="form-control" required>
    </div>
    <div class="form-group">
        <input type="text" name="apellidos" placeholder="Apellidos" class="form-control" required>                              
    </div>  
    <div class="form-group">
        <input type="text" name="nroId" placeholder="Nro de Identificacion" class="form-control" required>
    </div>
    <div class="form-group">
        <input type="text" name="fechaNacimiento" placeholder="Fecha de Nacimiento" class="form-control" required>
    </div>
    <div class="form-group">
        <input type="text" name="sexo" placeholder="Sexo" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" name="contacto" placeholder="Persona de Contacto" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">
        Guardar
    </button>
</form>